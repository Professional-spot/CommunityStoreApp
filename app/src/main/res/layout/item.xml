<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
app:cardBackgroundColor="@color/transparent_color"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
android:background="@drawable/card_view_2_"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="8dp"
    android:id="@+id/mainLayout">

    <LinearLayout
        android:id="@+id/uhh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Product"
                android:textColor="@color/text_color_3"
                android:textSize="20sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/priceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$5.30"
                android:maxLines="1"
                android:textColor="@color/text_color_3"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/priceunit"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/lb"
                android:maxLines="1"
                android:textColor="@color/text_color_3"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="available:"
                android:textColor="@color/text_color_3"
                android:textSize="10sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/amountunit"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_color_3"
                android:textSize="10sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="7dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: "
                    android:textSize="11sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/locationid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Saints"
                    android:textSize="11sp">

                </TextView>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seller: "
                android:textColor="@color/text_color_3"
                android:textSize="11sp"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/sellerid"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="seller name"
                android:textColor="@color/text_color_3"
                android:textSize="11sp">

            </TextView>





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Added: "
                android:textColor="@color/text_color_3"
                android:textSize="11sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/lastupdateid"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:text="2 days ago"
                android:textColor="@color/text_color_3"
                android:textSize="11sp">

            </TextView>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>